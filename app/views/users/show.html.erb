<h1>Articles</h1>
<% if @article&.any? %>  
    <% @article&.each do |article| %>  
        <h3><a href = "/articles/<%= article.id %>"><%= article.title %><a></h3>
    <% end %>
<% else %>
    <p>No articles found.</p>
<% end %>

<%= link_to "Go to Articles", articles_path %><br>
<%= link_to "Create new article", new_article_path(user_id: @user.id) %>
<%= button_to "Delete account", @user, method: :delete %><br>


